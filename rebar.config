%% vim: set ft=erlang : -*- erlang -*-
{require_min_otp_vsn, "R16B03"}.

{erl_opts, [
            warnings_as_errors,
            warn_export_all,
            warn_untyped_record,
            {parse_transform, logi_transform}
           ]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.

{clean_files, [".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{edoc_opts, [
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}
            ]}.

{validate_app_modules, true}.

{shell, [{apps, [proxy]}]}.

{dialyzer,
 [
  {warnings, [error_handling, race_conditions, unmatched_returns, unknown, no_improper_lists]}
 ]}.

{deps,
  [
   {logi, ".*", {git, "git://github.com/sile/logi.git", {tag, "v0.0.12"}}}
  ]}.

{profiles,
 [
  {test,
   [
    {plugins, [covertool]}
   ]}
 ]}.
